<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen300dp"
        android:layout_height="@dimen/dimen350dp"
        android:layout_margin="@dimen/dimen8dp"
        android:layout_centerInParent="true"
        android:background="@color/color_white_ffffff"
        app:cardCornerRadius="@dimen/dimen8dp"
        app:cardElevation="@dimen/dimen8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen100dp"
                android:layout_height="@dimen/dimen100dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen8dp" />

            <EditText
                android:id="@+id/et_login_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen8dp"
                android:padding="@dimen/dimen8dp"
                android:hint="@string/user_name_hint"
                android:background="@drawable/background_rect_white_blue" />

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen8dp"
                android:padding="@dimen/dimen8dp"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:background="@drawable/background_rect_white_blue" />

            <TextView
                android:id="@+id/tv_signup"
                android:textSize="@dimen/text10sp"
                android:textColor="@color/color_blue_3bbdfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_having_account"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen4dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen8dp"
                android:background="@color/colorAccent"
                android:text="@string/login_button_text" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>